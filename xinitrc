#!/bin/bash

cd $HOME
source "$HOME/.bashrc"

if [ -e "$HOME/.tz" ]; then
    read TZ < $HOME/.tz
else
    TZ="America/New_York"
fi
export TZ

scim -d
xmodmap ~/.xmodmaprc
xbindkeys
unclutter -idle 1 &
xsetroot -solid black
xset dpms 0
xset s off

pidof svscan || (svscan /home/jon/.dotfiles/services 2>&1 | readproctitle jon ........................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................) &

FIFO="$HOME/tmp/emacs.fifo"
rm $FIFO
mkfifo $FIFO

exec xmonad | xmobar ~/.xmonad/mobar.conf
