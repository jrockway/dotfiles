#!/bin/bash

cd $HOME
source "$HOME/.bashrc"

export TZ="America/Chicago"

scim -d
xmodmap ~/.xmodmaprc
xbindkeys
unclutter -idle 1 &
xsetroot -solid black

pidof svscan || (svscan /home/jon/.dotfiles/services 2>&1 | readproctitle jon ........................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................) &

exec xmonad | pmerge /tmp/a.fifo | xmobar ~/.xmonad/mobar.conf
