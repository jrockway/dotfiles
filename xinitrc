#!/bin/bash

cd $HOME;

export TZ="America/Chicago"

scim -d
urxvtd -q -f -o
xmodmap ~/.xmodmaprc
xbindkeys
unclutter -idle 1 &

svscan /home/jon/.dotfiles/services | readproctitle jon ........................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................

exec xmonad | xmobar ~/.xmonad/mobar.conf
